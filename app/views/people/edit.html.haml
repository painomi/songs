-# frozen_string_literal: true
= render partial: 'breadcrumb', locals: { page_name: t('view.edit') }

= simple_form_for(@person) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :description

  .form-actions
    = f.button :submit
    - if @person.persisted?
      = link_to t('view.show'), @person, class: 'btn btn-raised btn-primary'
    = link_to t('view.back'), people_path, class: 'btn btn-raised btn-primary'
