= render partial: 'breadcrumb', locals: { page_name: t('view.index') }

%div
  %div.row.header
    %div.col-sm-9= Person.human_attribute_name(:name)
    %div.col-sm-1
    %div.col-sm-1
    %div.col-sm-1
  %div.body
    - @people.each do |person|
      %div.row
        %div.col-sm-9= person.name
        %div.col-sm-1= link_to t('view.show'), person, class: 'btn btn-raised btn-primary'
        %div.col-sm-1= link_to t('view.edit'), edit_person_path(person), class: 'btn btn-raised btn-primary'
        %div.col-sm-1= link_to t('view.destroy'), person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-raised btn-primary'
  %div.row.footer

%br
= link_to t('view.new'), new_person_path, class: 'btn btn-raised btn-primary'
