= render partial: 'breadcrumb', locals: { page_name: t('view.show') }

- if notice.present?
  %div.alert.alert-success.alert-dismissible.fade.show#notice{role: 'alert'}
    = notice
    %button.close{ type:"button", 'data-dismiss':"alert", 'aria-label':"Close"}
      %span{'aria-hidden':"true"} &times;

= link_to t('view.edit'), edit_album_path(@album), class: 'btn btn-primary'
= link_to t('view.back'), albums_path, class: 'btn btn-primary'

%dl.row
  %dt.col-sm-1.text-secondary= Album.human_attribute_name(:name)
  %dd.col-sm-11= @album.name
%dl.row
  %dt.col-sm-1.text-secondary= Album.human_attribute_name(:artist)
  %dd.col-sm-2= @album.artist
  %dt.col-sm-1.text-secondary= Album.human_attribute_name(:publish_at)
  %dd.col-sm-2= @album.publish_at
  %dt.col-sm-1.text-secondary= Album.human_attribute_name(:description)
  %dd.col-sm-5= simple_format(@album.description)
%dl.row
  %dt.col-sm-1.text-secondary= Album.human_attribute_name(:media_type)
  %dd.col-sm-3= @album.media_type_i18n
  %dt.col-sm-1.text-secondary= Album.human_attribute_name(:release_type)
  %dd.col-sm-3= @album.release_type_i18n
  %dt.col-sm-1.text-secondary= Album.human_attribute_name(:production_type)
  %dd.col-sm-3= @album.production_type_i18n
.tracks
  - @album.tracks.each do |track|
    .row
      .col-1= track.number
      .col-3= track.song.name
      .col-8= track.description
